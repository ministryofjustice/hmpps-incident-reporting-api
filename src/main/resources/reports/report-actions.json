{
  "id": "report-actions",
  "name": "Report action counts",
  "description": "Counts of all user actions.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__STATS"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "whole-estate-per-week",
      "name": "Whole estate / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', cr.correction_requested_at) AS DATE) as week, to_char(min(cr.correction_requested_at), 'DD/MM/YYYY') as min_date, to_char(max(cr.correction_requested_at), 'DD/MM/YYYY') as max_date, \n\tcount(DISTINCT(cr.report_id)) as num_reports,\n\tcount(cr.id) as total_actions,\n\tROUND(CAST(count(cr.id) as numeric)/CAST(count(DISTINCT(cr.report_id)) as numeric),1) as avg_actions_per_report,\n\tcount(CASE WHEN user_action = 'REQUEST_REVIEW' THEN cr.id END) as num_req_review,\n\tcount(CASE WHEN user_action = 'REQUEST_DUPLICATE' THEN cr.id END) as num_req_dup,\n\tcount(CASE WHEN user_action = 'REQUEST_NOT_REPORTABLE' THEN cr.id END) as num_req_nr,\n\tcount(CASE WHEN user_action = 'REQUEST_CORRECTION' THEN cr.id END) as num_sent_back,\n\tcount(CASE WHEN user_action = 'HOLD' THEN cr.id END) as num_held,\n\tcount(CASE WHEN user_action = 'RECALL' AND user_type = 'REPORTING_OFFICER' THEN cr.id END) as num_recalled_ro,\n\tcount(CASE WHEN user_action = 'RECALL' AND user_type = 'DATA_WARDEN' THEN cr.id END) as num_recalled_dw,\n\tcount(CASE WHEN user_action = 'CLOSE' THEN cr.id END) as num_closed,\n\tcount(CASE WHEN user_action = 'MARK_DUPLICATE' THEN cr.id END) as num_mark_dup,\n\tcount(CASE WHEN user_action = 'MARK_NOT_REPORTABLE' THEN cr.id END) as num_mark_nr\nfrom correction_request as cr\nleft join (\nselect id, source from report\n) as r\non cr.report_id = r.id\nwhere r.source = 'DPS'\ngroup by week",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "num_reports",
            "type": "long"
          },
          {
            "name": "total_actions",
            "type": "long"
          },
          {
            "name": "avg_actions_per_report",
            "type": "float"
          },
          {
            "name": "num_req_review",
            "type": "long"
          },
          {
            "name": "num_req_dup",
            "type": "long"
          },
          {
            "name": "num_req_nr",
            "type": "long"
          },
          {
            "name": "num_sent_back",
            "type": "long"
          },
          {
            "name": "num_held",
            "type": "long"
          },
          {
            "name": "num_recalled_ro",
            "type": "long"
          },
          {
            "name": "num_recalled_dw",
            "type": "long"
          },
          {
            "name": "num_closed",
            "type": "long"
          },
          {
            "name": "num_mark_dup",
            "type": "long"
          },
          {
            "name": "num_mark_nr",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "whole-estate-per-month",
      "name": "Whole estate / month",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('month', cr.correction_requested_at) AS DATE) as month, to_char(min(cr.correction_requested_at), 'DD/MM/YYYY') as min_date, to_char(max(cr.correction_requested_at), 'DD/MM/YYYY') as max_date, \n\tcount(DISTINCT(cr.report_id)) as num_reports,\n\tcount(cr.id) as total_actions,\n\tROUND(CAST(count(cr.id) as numeric)/CAST(count(DISTINCT(cr.report_id)) as numeric),1) as avg_actions_per_report,\n\tcount(CASE WHEN user_action = 'REQUEST_REVIEW' THEN cr.id END) as num_req_review,\n\tcount(CASE WHEN user_action = 'REQUEST_DUPLICATE' THEN cr.id END) as num_req_dup,\n\tcount(CASE WHEN user_action = 'REQUEST_NOT_REPORTABLE' THEN cr.id END) as num_req_nr,\n\tcount(CASE WHEN user_action = 'REQUEST_CORRECTION' THEN cr.id END) as num_sent_back,\n\tcount(CASE WHEN user_action = 'HOLD' THEN cr.id END) as num_held,\n\tcount(CASE WHEN user_action = 'RECALL' AND user_type = 'REPORTING_OFFICER' THEN cr.id END) as num_recalled_ro,\n\tcount(CASE WHEN user_action = 'RECALL' AND user_type = 'DATA_WARDEN' THEN cr.id END) as num_recalled_dw,\n\tcount(CASE WHEN user_action = 'CLOSE' THEN cr.id END) as num_closed,\n\tcount(CASE WHEN user_action = 'MARK_DUPLICATE' THEN cr.id END) as num_mark_dup,\n\tcount(CASE WHEN user_action = 'MARK_NOT_REPORTABLE' THEN cr.id END) as num_mark_nr\nfrom correction_request as cr\nleft join (\nselect id, source from report\n) as r\non cr.report_id = r.id\nwhere r.source = 'DPS'\ngroup by month",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "num_reports",
            "type": "long"
          },
          {
            "name": "total_actions",
            "type": "long"
          },
          {
            "name": "avg_actions_per_report",
            "type": "float"
          },
          {
            "name": "num_req_review",
            "type": "long"
          },
          {
            "name": "num_req_dup",
            "type": "long"
          },
          {
            "name": "num_req_nr",
            "type": "long"
          },
          {
            "name": "num_sent_back",
            "type": "long"
          },
          {
            "name": "num_held",
            "type": "long"
          },
          {
            "name": "num_recalled_ro",
            "type": "long"
          },
          {
            "name": "num_recalled_dw",
            "type": "long"
          },
          {
            "name": "num_closed",
            "type": "long"
          },
          {
            "name": "num_mark_dup",
            "type": "long"
          },
          {
            "name": "num_mark_nr",
            "type": "long"
          }
        ]
      }
    }
  ],
