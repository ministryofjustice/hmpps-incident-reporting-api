{
  "id": "incident-report-v2",
  "name": "Incident report summary (Beta)",
  "description": "List of all incidents filtered by dates, types, status and locations and regions",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__ADMIN"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["prison_id IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "summary",
      "name": "Incident report summary",
      "datasource": "replicaDataSource",
      "query": "SELECT r.id,\n       report_reference,\n       ctf.code                    as type,\n       ctf.description             as type_description,\n       status,\n       constant_status.description as status_description,\n       incident_date_and_time,\n       reported_at,\n       reported_by,\n       title,\n       r.description,\n       location                    as prison_id,\n       modified_at,\n       COALESCE(prs.name, el.name) as prison_name,\n       el.noms_region_code         as region_code,\n       area.description            as region_name,\n       initcap(s.first_name)       as reporter_first_name,\n       initcap(s.last_name)        as reporter_last_name\nFROM report r\n         join constant_status on r.status = constant_status.code\n         join constant_type ct on r.type = ct.code\n         join constant_type_family ctf on ctf.code = ct.family_code\n         join establishment.establishment el on el.id = r.location and el.agency_type = 'INST'\n         join establishment.prison prs on prs.prison_id = r.location\n         join regional.area area on area.area_code = el.noms_region_code\n         join staff.staff s on s.username = r.reported_by\nWHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')",
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "prison_id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "type": "string"
          },
          {
            "name": "region_code",
            "type": "string"
          },
          {
            "name": "region_name",
            "type": "string"
          },
          {
            "name": "reported_at",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "modified_at",
            "type": "datetime"
          },
          {
            "name": "reporter_first_name",
            "type": "string"
          },
          {
            "name": "reporter_last_name",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_type_family",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "regionCodes",
      "name": "Region Codes",
      "datasource": "replicaDataSource",
      "query": "select area_code as code, description from regional.area where area_class = 'REGION' and active_flag = 'Y' order by description",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "prisons",
      "name": "Prisons",
      "datasource": "replicaDataSource",
      "query": "select prison_id, name as prison_name from establishment.prison where prison.active = true order by name",
      "schema": {
        "field": [
          {
            "name": "prison_id",
            "display": "Prison Id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "display": "Prison name",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_status where code != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "summary",
      "name": "Incident Report Summary (V2)",
      "description": "List of all incidents filtered by dates, types, status and locations",
      "version": "1.0.0",
      "dataset": "$ref:summary",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:report_reference",
            "display": "Report Reference",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${id}',${report_reference},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:prison_id",
            "display": "Prison",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 140,
                "returnAsStaticOptions": true,
                "dataset": "prisons",
                "name": "prison_id",
                "display": "prison_name"
              }
            }
          },
          {
            "name": "$ref:prison_name",
            "display": "Prison name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:region_code",
            "display": "Region",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 140,
                "returnAsStaticOptions": true,
                "dataset": "regionCodes",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:region_name",
            "display": "Region name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:type",
            "display": "Type",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Occurrence at",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "type": "datetime",
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "mandatory": false,
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:reported_at",
            "formula": "format_date(${reported_at}, 'dd/MM/yyyy')",
            "display": "Reported on",
            "sortable": true,
            "type": "date",
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:title",
            "display": "Incident title",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:description",
            "display": "Incident description",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:reporter_last_name",
            "formula": "${reporter_last_name}, ${reporter_first_name}",
            "display": "Reported by",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:modified_at",
            "display": "Last Updated",
            "formula": "format_date(${modified_at}, 'dd/MM/yyyy HH:mm')",
            "type": "date",
            "sortable": true,
            "visible": "false",
            "defaultsort": true
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:summary"
      }]
    }
  ]
}
