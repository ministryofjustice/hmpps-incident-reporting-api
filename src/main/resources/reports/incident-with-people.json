{
  "id": "incident-with-people",
  "name": "Incident People reports",
  "description": "List of incidents where a person is involved",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "dataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "ROLE_INCIDENT_REPORTS__RO",
                "ROLE_INCIDENT_REPORTS__RW",
                "ROLE_INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-prisoner",
      "name": "Report of prisoner involvement in an incident",
      "datasource": "dataSource",
      "query": "select r.report_reference, r.location,r.type, ct.description type_description, r.status, cs.description status_description, r.incident_date_and_time, r.reported_by, initcap(pi.first_name) as first_name, initcap(pi.last_name) as last_name, pi.prisoner_number, pi.comment\nfrom prisoner_involvement pi join report r on r.id = pi.report_id\njoin constant_status cs on r.status = cs.code join constant_type ct on r.type = ct.code WHERE status != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 20,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "first_name",
            "type": "string"
          },
          {
            "name": "last_name",
            "type": "string"
          },
          {
            "name": "prisoner_number",
            "type": "string"
          },
          {
            "name": "comment",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string",
            "filter": {
              "type" : "caseloads",
              "mandatory": false
            }
          }
        ]
      }
    },
    {
      "id": "by-staff",
