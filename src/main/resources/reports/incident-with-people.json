          },
          {
            "name": "location",
            "type": "string",
            "filter": {
              "type" : "caseloads",
              "mandatory": false
            }
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "dataSource",
      "query": "SELECT code, description FROM constant_type",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "dataSource",
      "query": "SELECT code, description FROM constant_status",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-prisoner",
      "name": "Prisoner involvement in incidents",
      "description": "Details each prisoner and their involvement in an incident",
      "version": "1.0.0",
      "dataset": "$ref:by-prisoner",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:prisoner_number",
            "display": "Prisoner number",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "text"
            }
          },
          {
            "name": "$ref:last_name",
            "formula": "${last_name}, ${first_name}",
            "display": "Name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:report_reference",
            "display": "Incident number",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Date of incident",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy hh:mm')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:type",
            "display": "Type code",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:comment",
            "display": "Extra information",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-prisoner"
      }]
    },
