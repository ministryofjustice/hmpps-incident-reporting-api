          },
          {
            "name": "type",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 20,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "status_description",
            "type": "string"
