          },
          {
            "name": "staff_username",
            "type": "string"
          },
          {
            "name": "comment",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string",
            "filter": {
              "type" : "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_type_family",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_status where code != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-prisoner",
      "name": "Prisoner involvement",
      "description": "Details of prisoners and their involvement in an incident.",
      "version": "1.0.0",
      "dataset": "$ref:by-prisoner",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:prisoner_number",
            "display": "Prisoner number",
            "sortable": true,
            "formula": "make_url('https://prisoner-${env}.digital.prison.service.justice.gov.uk/prisoner/${prisoner_number}',${prisoner_number},TRUE)",
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "text"
            }
          },
          {
            "name": "$ref:last_name",
            "formula": "${last_name}, ${first_name}",
            "display": "Name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:report_reference",
            "display": "Incident number",
            "sortable": true,
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${id}',${report_reference},TRUE)",
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Date of incident",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "defaultsortorder": "descending",
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:type",
            "display": "Type code",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:comment",
            "display": "Extra information",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-prisoner"
      }]
    },
