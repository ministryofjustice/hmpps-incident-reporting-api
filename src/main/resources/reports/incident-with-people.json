{
  "id": "incident-with-people",
  "name": "Incident people reports",
  "description": "All incident types where a person is involved.",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__RO",
                "INCIDENT_REPORTS__RW",
                "INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-prisoner",
      "name": "Report of prisoner involvement in an incident",
      "datasource": "replicaDataSource",
      "query": "select r.id, r.report_reference, r.location,ctf.code as type, ct.description type_description, r.status, cs.description status_description, r.incident_date_and_time, r.reported_by, initcap(pi.first_name) as first_name, initcap(pi.last_name) as last_name, pi.prisoner_number, pi.comment\nfrom prisoner_involvement pi join report r on r.id = pi.report_id\njoin constant_status cs on r.status = cs.code join constant_type ct on r.type = ct.code join constant_type_family ctf on ctf.code = ct.family_code WHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')",
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string",
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string",
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "maximumOptions": 20,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "first_name",
            "type": "string"
          },
          {
            "name": "last_name",
            "type": "string"
          },
          {
            "name": "prisoner_number",
            "type": "string"
          },
          {
            "name": "comment",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string",
            "filter": {
              "type" : "caseloads",
              "mandatory": false
            }
          }
        ]
      }
    },
    {
      "id": "self-harm",
      "name": "Deliberate Self Harm Report",
      "datasource": "replicaDataSource",
      "query": "select report_id,\n       prisoner_number,\n       initcap(last_name) as last_name,\n       initcap(first_name) as first_name,\n       report_reference,\n       location,\n       incident_date_and_time,\n       title,\n       description,\n       category,\n       initcap(materials_used) as materials_used,\n       initcap(other_method) as other_method,\n       initcap(q1_location) as q1_location,\n       initcap(additional_comment) as additional_comment\nfrom report.self_harm_summary_view",
      "schema": {
        "field": [
          {
            "name": "report_id",
            "type": "string"
          },
          {
            "name": "prisoner_number",
            "type": "string"
          },
          {
            "name": "last_name",
            "type": "string"
          },
          {
            "name": "first_name",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "q1_location",
            "type": "string"
          },
          {
            "name": "additional_comment",
            "type": "string"
          },
          {
            "name": "category",
            "type": "string",
            "filter": {
              "type": "multiselect",
              "staticoptions": [
                {"name": "Cutting","display": "Cutting"},
                {"name": "Hanging","display": "Hanging"},
                {"name": "Self Strangulation","display": "Self Strangulation"},
                {"name": "Poisoning / Overdose / Swallowing","display": "Poisoning / Overdose / Swallowing"},
                {"name": "Burning","display": "Burning"},
                {"name": "Other","display": "Other"},
                {"name": "Unknown","display": "Unknown"}
              ]
            }
          },
          {
            "name": "materials_used",
            "type": "string"
          },
          {
            "name": "other_method",
            "type": "string"
          }
        ]
      }
    },
    {
