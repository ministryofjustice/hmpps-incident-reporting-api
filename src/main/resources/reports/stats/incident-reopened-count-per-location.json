{
  "id": "incident-reopened-count-per-location",
  "name": "Re-opened report counts by location",
  "description": "Counts of previously completed reports that have been re-opened by location.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__STATS"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-location-per-week",
      "name": "Location / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', sh.changed_at) AS DATE) as week, to_char(min(sh.changed_at), 'DD/MM/YYYY') as min_date, to_char(max(sh.changed_at), 'DD/MM/YYYY') as max_date, r.location, count(sh.report_id) as reopened_count\nfrom status_history as sh\nleft join (\nselect location, id from report\n) as r\non sh.report_id = r.id\nwhere status = 'REOPENED'\ngroup by week, r.location",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-month",
      "name": "Location / month",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('month', sh.changed_at) AS DATE) as month, to_char(min(sh.changed_at), 'DD/MM/YYYY') as min_date, to_char(max(sh.changed_at), 'DD/MM/YYYY') as max_date, r.location, count(sh.report_id) as reopened_count\nfrom status_history as sh\nleft join (\nselect location, id from report\n) as r\non sh.report_id = r.id\nwhere status = 'REOPENED'\ngroup by month, r.location",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-location-per-week",
      "name": "Location / week",
      "description": "Count of incident reports re-opened per location per week",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-week",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:week",
            "display": "Week starting <br/>date",
            "formula": "format_date(${week}, 'dd-MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports <br/>re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    },
    {
      "id": "by-location-per-month",
      "name": "Location / month",
      "description": "Count of incident reports re-opened per location per month.",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:month",
            "display": "Month <br/>of incident",
            "formula": "format_date(${month}, 'MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports <br/>re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    }
  ]
}
