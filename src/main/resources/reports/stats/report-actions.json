      "id": "locations",
      "name": "Locations",
      "datasource": "replicaDataSource",
      "query": "select DISTINCT(location) as location\nfrom report\nwhere source = 'DPS' and location not in ('NORTH', 'SOUTH')\nUNION ALL\nselect 'All locations' as location",
