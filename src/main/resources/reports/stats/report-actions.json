{
  "id": "report-actions",
  "name": "Report action counts by location",
  "description": "Counts of all user actions by location.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__STATS"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "per-week",
      "name": "Location per type / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', cr.correction_requested_at) AS DATE) as week, to_char(min(cr.correction_requested_at), 'DD/MM/YYYY') as min_date, to_char(max(cr.correction_requested_at), 'DD/MM/YYYY') as max_date,\n       COALESCE(r.location, 'All locations') as location,\n       COALESCE(ct.description, 'All incident types') as incident_type,\n       count(DISTINCT(cr.report_id)) as num_reports,\n       count(cr.id) as total_actions,\n       ROUND(CAST(count(cr.id) as numeric)/CAST(count(DISTINCT(cr.report_id)) as numeric),1) as avg_actions_per_report,\n       count(CASE WHEN user_action = 'REQUEST_REVIEW' THEN cr.id END) as num_req_review,\n       count(CASE WHEN user_action = 'REQUEST_DUPLICATE' THEN cr.id END) as num_req_dup,\n       count(CASE WHEN user_action = 'REQUEST_NOT_REPORTABLE' THEN cr.id END) as num_req_nr,\n       count(CASE WHEN user_action = 'REQUEST_CORRECTION' THEN cr.id END) as num_sent_back,\n       count(CASE WHEN user_action = 'HOLD' THEN cr.id END) as num_held,\n       count(CASE WHEN user_action = 'RECALL' AND user_type = 'REPORTING_OFFICER' THEN cr.id END) as num_recalled_ro,\n       count(CASE WHEN user_action = 'RECALL' AND user_type = 'DATA_WARDEN' THEN cr.id END) as num_recalled_dw,\n       count(CASE WHEN user_action = 'CLOSE' THEN cr.id END) as num_closed,\n       count(CASE WHEN user_action = 'MARK_DUPLICATE' THEN cr.id END) as num_mark_dup,\n       count(CASE WHEN user_action = 'MARK_NOT_REPORTABLE' THEN cr.id END) as num_mark_nr\nfrom correction_request as cr\nleft join (\n    select location, id, type, source from report\n) as r\non cr.report_id = r.id\nleft join (\n    select code, description\n    from constant_type\n) as ct\non r.type = ct.code\nwhere r.source = 'DPS'\ngroup by week, ROLLUP(r.location), ROLLUP(ct.description)",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "incident_type",
            "type": "string"
          },
          {
            "name": "num_reports",
            "type": "long"
          },
          {
            "name": "total_actions",
            "type": "long"
          },
          {
            "name": "avg_actions_per_report",
            "type": "float"
          },
          {
            "name": "num_req_review",
            "type": "long"
          },
          {
            "name": "num_req_dup",
            "type": "long"
          },
          {
            "name": "num_req_nr",
            "type": "long"
          },
          {
            "name": "num_sent_back",
            "type": "long"
          },
          {
            "name": "num_held",
