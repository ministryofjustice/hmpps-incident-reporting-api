{
  "id": "incident-reopened-count",
  "name": "Re-opened report counts by location",
  "description": "Counts of previously completed reports that have been re-opened by location.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__STATS"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "per-week",
      "name": "Location / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', sh.changed_at) AS DATE) as week, to_char(min(sh.changed_at), 'DD/MM/YYYY') as min_date, to_char(max(sh.changed_at), 'DD/MM/YYYY') as max_date,\n       COALESCE(r.location, 'All locations') as location,\n       COALESCE(ct.description, 'All incident types') as incident_type,\n       count(sh.report_id) as reopened_count\nfrom status_history as sh\nleft join (\n    select location, type, id from report\n) as r\non sh.report_id = r.id\nleft join (\n    select code, description\n    from constant_type\n) as ct\non r.type = ct.code\nwhere status = 'REOPENED'\ngroup by week, ROLLUP(r.location), ROLLUP(ct.description)",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "incident_type",
            "type": "string"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "per-month",
      "name": "Location / month",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('month', sh.changed_at) AS DATE) as month, to_char(min(sh.changed_at), 'DD/MM/YYYY') as min_date, to_char(max(sh.changed_at), 'DD/MM/YYYY') as max_date,\n       COALESCE(r.location, 'All locations') as location,\n       COALESCE(ct.description, 'All incident types') as incident_type,\n       count(sh.report_id) as reopened_count\nfrom status_history as sh\nleft join (\n    select location, type, id from report\n) as r\non sh.report_id = r.id\nleft join (\n    select code, description\n    from constant_type\n) as ct\non r.type = ct.code\nwhere status = 'REOPENED'\ngroup by month, ROLLUP(r.location), ROLLUP(ct.description)",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "incident_type",
            "type": "string"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "locations",
      "name": "Locations",
      "datasource": "replicaDataSource",
      "query": "select DISTINCT(location) as location\nfrom report\nwhere source = 'DPS' and location not in ('NORTH', 'SOUTH')\nUNION ALL\nselect 'All locations' as location",
      "schema": {
        "field": [
          {
            "name": "location",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT DISTINCT(description) FROM constant_type_family\nUNION ALL\nselect 'All incident types' as description",
      "schema": {
        "field": [
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "per-week",
      "name": "Location / week",
      "description": "Count of incident reports re-opened per location per week",
      "version": "1.0.0",
      "dataset": "$ref:per-week",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:week",
            "display": "Week starting <br/>date",
            "formula": "format_date(${week}, 'dd-MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "returnAsStaticOptions": true,
                "dataset": "locations",
                "name": "location",
                "display": "location"
              }
            }
          },
          {
            "name": "$ref:incident_type",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "description",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports <br/>re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    },
    {
      "id": "per-month",
      "name": "Location / month",
      "description": "Count of incident reports re-opened per location per month.",
      "version": "1.0.0",
      "dataset": "$ref:per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:month",
            "display": "Month <br/>of incident",
            "formula": "format_date(${month}, 'MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "returnAsStaticOptions": true,
                "dataset": "locations",
                "name": "location",
                "display": "location"
              }
            }
          },
          {
            "name": "$ref:incident_type",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "description",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports <br/>re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    }
  ]
}
