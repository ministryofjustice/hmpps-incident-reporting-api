{
  "id": "incident-removal-requests-per-location",
  "name": "Removal request counts by location",
  "description": "Counts of removal requests made by reporting officers by location.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__STATS"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-location-per-week",
      "name": "Location / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', cr.correction_requested_at) AS DATE) as week, to_char(min(cr.correction_requested_at), 'DD/MM/YYYY') as min_date, to_char(max(cr.correction_requested_at), 'DD/MM/YYYY') as max_date, r.location, count(cr.id) as number_of_removal_requests\nfrom correction_request as cr\nleft join (\nselect location, id from report\n) as r\non cr.report_id = r.id\nwhere user_action in ('REQUEST_DUPLICATE', 'REQUEST_NOT_REPORTABLE')\ngroup by week, r.location",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "number_of_removal_requests",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-month",
      "name": "Location / month",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('month', cr.correction_requested_at) AS DATE) as month, to_char(min(cr.correction_requested_at), 'DD/MM/YYYY') as min_date, to_char(max(cr.correction_requested_at), 'DD/MM/YYYY') as max_date, r.location, count(cr.id) as number_of_removal_requests\nfrom correction_request as cr\nleft join (\nselect location, id from report\n) as r\non cr.report_id = r.id\nwhere user_action in ('REQUEST_DUPLICATE', 'REQUEST_NOT_REPORTABLE')\ngroup by month, r.location",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "number_of_removal_requests",
            "type": "long"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-location-per-week",
      "name": "Location / week",
      "description": "Count of removal requests made by reporting officers per location per week",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-week",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:week",
            "display": "Week starting date",
            "formula": "format_date(${week}, 'dd-MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:number_of_removal_requests",
            "display": "Number of removal requests",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-week"
      }]
    },
    {
      "id": "by-location-per-month",
      "name": "Location / month",
      "description": "Count of removal requests made by reporting officers per location per month.",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:month",
            "display": "Month of incident",
            "formula": "format_date(${month}, 'MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:number_of_removal_requests",
            "display": "Number of removal requests",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-month"
      }]
    }
  ]
}
