{
  "id": "incident-count",
  "name": "Incident count reports",
  "description": "Reports showing the count of incident types by establishment and status for a given period.",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__RO",
                "INCIDENT_REPORTS__RW",
                "INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-location-per-day",
      "name": "Count of incidents per location per day",
      "datasource": "replicaDataSource",
      "query": "SELECT cast(date_trunc('day', incident_date_and_time) as date) as start_date, to_char(min(incident_date_and_time), 'DD/MM/YYYY') as filter_date, location, ctf.code as type, ctf.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code join constant_type_family ctf on ctf.code = ct.family_code WHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')\ngroup by date_trunc('day', r.incident_date_and_time), r.location, ctf.code, ctf.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "filter_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-week",
      "name": "Count of incidents per location per week",
      "datasource": "replicaDataSource",
      "query": "SELECT cast(date_trunc('week', incident_date_and_time) as date) as start_date, to_char(min(incident_date_and_time), 'DD/MM/YYYY') as min_date, to_char(max(incident_date_and_time), 'DD/MM/YYYY') as max_date, location, ctf.code as type, ctf.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code join constant_type_family ctf on ctf.code = ct.family_code WHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')\ngroup by date_trunc('week', r.incident_date_and_time), r.location, ctf.code, ctf.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-month",
      "name": "Count of incidents per location per month",
      "datasource": "replicaDataSource",
      "query": "SELECT cast(date_trunc('month', incident_date_and_time) as date) as start_date, to_char(min(incident_date_and_time), 'DD/MM/YYYY') as min_date, to_char(max(incident_date_and_time), 'DD/MM/YYYY') as max_date, location, ctf.code as type, ctf.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code join constant_type_family ctf on ctf.code = ct.family_code WHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')\ngroup by date_trunc('month', r.incident_date_and_time), r.location, ctf.code, ctf.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_type_family",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_status where code != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-location-per-day",
      "name": "Day and location reports",
      "description": "Counts of incidents by type and location for each day.",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-day",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:start_date",
            "display": "Date of incident",
            "formula": "format_date(${start_date}, 'dd/MM/yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "defaultsortorder": "descending",
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:type",
            "display": "Type code",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:num_of_incidents",
            "display": "Incidents/Day",
            "sortable": true,
            "visible": "true",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports?fromDate=${filter_date}&toDate=${filter_date}&location=${location}&typeFamily=${type}',${num_of_incidents},TRUE)",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-day"
      }]
    },
    {
