  "dataset": [
    {
      "id": "by-location-per-week",
      "name": "Count of incidents per location",
      "datasource": "dataSource",
      "query": "SELECT date_trunc('week', incident_date_and_time) as start_date, location, type, count(*) num_of_incidents FROM report WHERE status != 'DUPLICATE' group by date_trunc('week', incident_date_and_time), location, type",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "location",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "minimumLength": 1,
                "returnAsStaticOptions": true,
                "maximumOptions": 130
              }
            }
          },
          {
            "name": "type",
            "type": "string",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "maximumOptions": 20,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
