{
  "id": "incident-count",
  "name": "Incident Count",
  "description": "Count of incident types by establishment and status for a given period",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "dataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "ROLE_INCIDENT_REPORTS__RO",
                "ROLE_INCIDENT_REPORTS__RW",
                "ROLE_INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-location-per-day",
      "name": "Count of incidents per location per day",
      "datasource": "dataSource",
      "query": "SELECT cast(date_trunc('day', incident_date_and_time) as date) as start_date, location, r.type, ct.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code WHERE status != 'DUPLICATE'\ngroup by date_trunc('day', r.incident_date_and_time), r.location, r.type, ct.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-week",
      "name": "Count of incidents per location per week",
      "datasource": "dataSource",
      "query": "SELECT cast(date_trunc('week', incident_date_and_time) as date) as start_date, location, r.type, ct.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code WHERE status != 'DUPLICATE'\ngroup by date_trunc('week', r.incident_date_and_time), r.location, r.type, ct.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "by-location-per-month",
      "name": "Count of incidents per location per month",
      "datasource": "dataSource",
      "query": "SELECT cast(date_trunc('month', incident_date_and_time) as date) as start_date, location, r.type, ct.description as type_description, count(*) num_of_incidents\nFROM report r join constant_status on r.status = constant_status.code join constant_type ct on r.type = ct.code WHERE status != 'DUPLICATE'\ngroup by date_trunc('month', r.incident_date_and_time), r.location, r.type, ct.description",
      "schema": {
        "field": [
          {
            "name": "start_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "num_of_incidents",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "dataSource",
      "query": "SELECT code, description FROM constant_type",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "dataSource",
      "query": "SELECT code, description FROM constant_status",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-location-per-day",
      "name": "Count of incident reports by day and location",
      "description": "Counts of incidents by type and location for each day",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-day",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:start_date",
            "display": "Date of incident",
            "formula": "format_date(${start_date}, 'dd/MM/yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:type",
            "display": "Type code",
            "sortable": true,
            "visible": "false",
            "defaultsort": true,
            "filter": {
              "type": "multiselect",
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:num_of_incidents",
            "display": "Incidents/Day",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-day"
      }]
    },
