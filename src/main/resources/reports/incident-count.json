      "version": "1.0.0",
      "dataset": "$ref:by-location-per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:start_date",
            "display": "Month of incident",
            "formula": "format_date(${start_date}, 'MMM-yyyy')",
            "sortable": true,
