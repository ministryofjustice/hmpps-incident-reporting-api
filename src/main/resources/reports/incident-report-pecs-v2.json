{
  "id": "incident-report-pecs-v2",
  "name": "PECS Incident reports (Beta)",
  "description": "List of all PECS incidents filtered by dates, types, status and locations",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__ADMIN"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "summary",
      "name": "PECS incident report summary",
      "datasource": "replicaDataSource",
      "query": "SELECT r.id,\n       report_reference,\n       ctf.code                                                                                                     as type,\n       ctf.description                                                                                              as type_description,\n       status,\n       cs.description                                                                                               as status_description,\n       incident_date_and_time,\n       reported_at,\n       reported_by,\n       initcap(s.first_name)       as reporter_first_name,\n       initcap(s.last_name)        as reporter_last_name,\n       title,\n       r.description,\n       location,\n       el.name                                                                      as pecs_region,\n       modified_at\nFROM report r\n         join constant_status cs on r.status = cs.code\n         join constant_type ct on r.type = ct.code\n         join constant_type_family ctf on ctf.code = ct.family_code\n         join establishment.establishment el on el.id = r.location\n         join staff.staff s on s.username = r.reported_by\nWHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')\n  AND el.agency_type = 'PECS'",
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "pecs_region",
            "type": "string"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "reported_at",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "reporter_first_name",
            "type": "string"
          },
          {
            "name": "reporter_last_name",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "modified_at",
            "type": "datetime"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_type_family",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "pecsRegions",
      "name": "PECS regions",
      "datasource": "replicaDataSource",
      "query": "SELECT id, name from establishment.establishment el where agency_type = 'PECS' and active = 'Y'",
      "schema": {
        "field": [
          {
            "name": "id",
            "display": "Code",
            "type": "string"
          },
          {
            "name": "name",
            "display": "Region",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_status where code != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "summary",
      "name": "PECS incident reports (V2)",
      "description": "List of all PECS incidents filtered by dates, types, status and PECS areas",
      "version": "1.0.0",
      "dataset": "$ref:summary",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:report_reference",
            "display": "Report Reference",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${id}',${report_reference},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:pecs_region",
            "display": "PECS region",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Region",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "pecsRegions",
                "name": "id",
                "display": "name"
              }
            }
          },
          {
            "name": "$ref:type",
            "display": "Type",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Occurrence at",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "type": "datetime",
            "visible": "true",
            "defaultsort": true,
            "defaultsortorder": "descending",
            "filter": {
              "mandatory": false,
              "type": "daterange",
              "default": "today(-12,months) - today()"
            }
          },
          {
            "name": "$ref:reported_at",
            "formula": "format_date(${reported_at}, 'dd/MM/yyyy')",
            "display": "Reported on",
            "sortable": true,
            "type": "date",
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:title",
            "display": "Incident title",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:description",
            "display": "Incident description",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:reported_by",
            "display": "Reported by",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:reporter_last_name",
            "formula": "${reporter_last_name}, ${reporter_first_name}",
            "display": "Reported by",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:modified_at",
            "display": "Last Updated",
            "formula": "format_date(${modified_at}, 'dd/MM/yyyy HH:mm')",
            "type": "date",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:summary"
      }]
    }
  ]
}
