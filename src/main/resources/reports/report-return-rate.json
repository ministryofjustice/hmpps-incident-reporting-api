{
  "id": "report-return-rate",
  "name": "Incident report return rate",
  "description": "Rate of reports being returned to reporting officers by data wardens.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__ADMIN"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "by-location-per-month",
      "name": "Return rate per location per month",
      "datasource": "replicaDataSource",
      "query": "select month, min_date, max_date, location, all_reports, returned, dw_not_seen, closed, \nCASE WHEN (all_reports-dw_not_seen) = 0 THEN 0.0 \nELSE ROUND((CAST(returned as numeric)/(all_reports-dw_not_seen))*100, 1) \nEND as dw_seen_percentage_returned\nfrom (\nselect Cast(Date_trunc('month', incident_date_and_time) AS DATE) as month, to_char(min(incident_date_and_time), 'DD/MM/YYYY') as min_date, to_char(max(incident_date_and_time), 'DD/MM/YYYY') as max_date, r.location, count(r.id) as all_reports, \ncount(CASE WHEN cr.requested_corection = '1' THEN r.id END) as returned,\ncount(CASE WHEN r.status in ('DRAFT', 'AWAITING_REVIEW') THEN r.id END) as dw_not_seen,\ncount(CASE WHEN r.status in ('CLOSED', 'DUPLICATE', 'NOT_REPORTABLE') THEN r.id END) as closed\nfrom report as r\nleft join (\nselect DISTINCT report_id, '1' as requested_corection\nfrom correction_request\nwhere user_action = 'REQUEST_CORRECTION') as cr\non r.id = cr.report_id\nwhere r.source = 'DPS'\ngroup by Date_trunc('month', r.incident_date_and_time), r.location)",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "all_reports",
            "type": "long"
          },
          {
            "name": "returned",
            "type": "long"
          },
          {
            "name": "dw_not_seen",
            "type": "long"
          },
          {
            "name": "closed",
            "type": "long"
          },
          {
            "name": "dw_seen_percentage_returned",
            "type": "float"
          }
        ]
      }
    },
    {
      "id": "by-location-per-year",
      "name": "Return rate per location per year",
      "datasource": "replicaDataSource",
      "query": "select year, min_date, max_date, location, all_reports, returned, dw_not_seen, closed, \nCASE WHEN (all_reports-dw_not_seen) = 0 THEN 0.0 \nELSE ROUND((CAST(returned as numeric)/(all_reports-dw_not_seen))*100, 1) \nEND as dw_seen_percentage_returned\nfrom (\nselect Cast(Date_trunc('year', incident_date_and_time) AS DATE) as year, to_char(min(incident_date_and_time), 'DD/MM/YYYY') as min_date, to_char(max(incident_date_and_time), 'DD/MM/YYYY') as max_date, r.location, count(r.id) as all_reports, \ncount(CASE WHEN cr.requested_corection = '1' THEN r.id END) as returned,\ncount(CASE WHEN r.status in ('DRAFT', 'AWAITING_REVIEW') THEN r.id END) as dw_not_seen,\ncount(CASE WHEN r.status in ('CLOSED', 'DUPLICATE', 'NOT_REPORTABLE') THEN r.id END) as closed\nfrom report as r\nleft join (\nselect DISTINCT report_id, '1' as requested_corection\nfrom correction_request\nwhere user_action = 'REQUEST_CORRECTION') as cr\non r.id = cr.report_id\nwhere r.source = 'DPS'\ngroup by Date_trunc('year', r.incident_date_and_time), r.location)",
      "schema": {
        "field": [
          {
            "name": "year",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "all_reports",
            "type": "long"
          },
          {
            "name": "returned",
            "type": "long"
          },
          {
            "name": "dw_not_seen",
            "type": "long"
          },
          {
            "name": "closed",
            "type": "long"
          },
          {
            "name": "dw_seen_percentage_returned",
            "type": "float"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "by-location-per-month",
      "name": "Month and location reports",
      "description": "Percentage of incident reports returned to reporting officers by data wardens per location per month.",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:month",
            "display": "Month of incident",
            "formula": "format_date(${month}, 'MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false,
              "interactive": true
            }
          },
          {
            "name": "$ref:all_reports",
            "display": "All reports submitted",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:returned",
            "display": "Reports returned by DW",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:dw_not_seen",
            "display": "Reports not yet seen by a DW",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:closed",
            "display": "Reports that have been closed",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:dw_seen_percentage_returned",
            "display": "Percentage of reviewed reports returned",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-month"
      }]
    },
    {
      "id": "by-location-per-year",
      "name": "Year and location reports",
      "description": "Percentage of incident reports returned to reporting officers by data wardens per location per year.",
      "version": "1.0.0",
      "dataset": "$ref:by-location-per-year",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:year",
            "display": "Year of incident",
            "formula": "format_date(${year}, 'yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc"
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "caseloads",
              "mandatory": false,
              "interactive": true
            }
          },
          {
            "name": "$ref:all_reports",
            "display": "All reports submitted",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:returned",
            "display": "Reports returned by DW",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:dw_not_seen",
            "display": "Reports not yet seen by a DW",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:closed",
            "display": "Reports that have been closed",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:dw_seen_percentage_returned",
            "display": "Percentage of reviewed reports returned",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:by-location-per-year"
      }]
    }
  ]
}
