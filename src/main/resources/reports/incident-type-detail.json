{
  "id": "incident-type-detail",
  "name": "Incident details for specific types",
  "description": "Reports on specific incident types such as self harm, assault and finds",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__RO",
                "INCIDENT_REPORTS__RW",
                "INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["location IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "serious-sexual-assault",
      "name": "INC0020 Serious and Sexual Assault Incident Detail",
      "datasource": "replicaDataSource",
      "query": "select report_id,\n       report_reference,\n       incident_date_and_time,\n       title,\n       description,\n       status,\n       status_description,\n       location,\n       prisoner_number,\n  prisoner_role,\n       prisoner_role_description,\n       initcap(last_name) as last_name,\n       initcap(first_name) as first_name\nfrom report.serious_sexual_assault_summary_view",
      "schema": {
        "field": [
          {
            "name": "report_id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "prisoner_number",
            "type": "string"
          },
          {
            "name": "prisoner_role",
            "type": "string"
          },
          {
            "name": "prisoner_role_description",
            "type": "string"
          },
          {
            "name": "last_name",
            "type": "string"
          },
          {
            "name": "first_name",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_status where code != 'DUPLICATE'",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "prisoner_role",
      "name": "Prisoner Role",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM constant_prisoner_role",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Role code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Role Description",
            "type": "string"
          }
        ]
      }
    }

  ],
  "report": [
    {
      "id": "serious-sexual-assault",
      "name": "Serious and Sexual Assault Incident Detail",
      "description": "Detail for serious and sexual assault incidents",
      "version": "1.0.0",
      "dataset": "$ref:serious-sexual-assault",
      "policy": [
      ],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:prisoner_number",
            "display": "Prisoner number",
            "sortable": true,
            "formula": "make_url('https://prisoner-${env}.digital.prison.service.justice.gov.uk/prisoner/${prisoner_number}',${prisoner_number},TRUE)",
            "visible": "true",
            "defaultsort": true,
            "filter": {
              "type": "text"
            }
          },
          {
            "name": "$ref:last_name",
            "formula": "${last_name}, ${first_name}",
            "display": "Name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:report_reference",
            "display": "Report Reference",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${report_id}',${report_reference},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type" : "caseloads",
              "mandatory": false
            }
          },
          {
            "name": "$ref:status",
            "display": "Status code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Incident date",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "type": "datetime",
            "visible": "true",
            "defaultsort": false,
            "defaultsortorder": "descending",
            "filter": {
              "mandatory": false,
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:prisoner_role",
            "display": "Participation code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 20,
                "returnAsStaticOptions": true,
                "dataset": "prisoner_role",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:prisoner_role_description",
            "display": "Participation",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:title",
            "display": "Incident title",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:description",
            "display": "Incident details",
            "sortable": false,
            "visible": "true",
            "defaultsort": false,
            "wordwrap": "break-words"
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:serious-sexual-assault"
      }]
    }
  ]
}
