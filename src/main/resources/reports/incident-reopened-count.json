{
  "id": "incident-reopened-count",
  "name": "Re-opened report counts",
  "description": "Counts of previously completed reports that have been re-opened for whole prison estate.",
  "metadata": {
    "author": "Josh Jones",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__ADMIN"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "whole-estate-per-week",
      "name": "Whole estate / week",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('week', changed_at) AS DATE) as week, to_char(min(changed_at), 'DD/MM/YYYY') as min_date, to_char(max(changed_at), 'DD/MM/YYYY') as max_date, count(report_id) as reopened_count\nfrom status_history\nwhere status = 'REOPENED'\ngroup by week",
      "schema": {
        "field": [
          {
            "name": "week",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    },
    {
      "id": "whole-estate-per-month",
      "name": "Whole estate / month",
      "datasource": "replicaDataSource",
      "query": "select Cast(Date_trunc('month', changed_at) AS DATE) as month, to_char(min(changed_at), 'DD/MM/YYYY') as min_date, to_char(max(changed_at), 'DD/MM/YYYY') as max_date, count(report_id) as reopened_count\nfrom status_history\nwhere status = 'REOPENED'\ngroup by month",
      "schema": {
        "field": [
          {
            "name": "month",
            "type": "date"
          },
          {
            "name": "min_date",
            "type": "date"
          },
          {
            "name": "max_date",
            "type": "date"
          },
          {
            "name": "reopened_count",
            "type": "long"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "whole-estate-per-week",
      "name": "Whole estate / week",
      "description": "Count of incident reports re-opened for whole prison estate per week.",
      "version": "1.0.0",
      "dataset": "$ref:whole-estate-per-week",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:week",
            "display": "Week starting date",
            "formula": "format_date(${week}, 'dd-MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:whole-estate-per-week"
      }]
    },
    {
      "id": "whole-estate-per-month",
      "name": "Whole estate / month",
      "description": "Count of incident reports re-opened for whole prison estate per month.",
      "version": "1.0.0",
      "dataset": "$ref:whole-estate-per-month",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:month",
            "display": "Month of incident",
            "formula": "format_date(${month}, 'MMM-yyyy')",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "type": "daterange",
              "default": "today(-3,months) - today()"
            }
          },
          {
            "name": "$ref:reopened_count",
            "display": "Number of reports re-opened",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": [],
      "summary": [{
        "id": "summaryId",
        "template": "page-header",
        "dataset": "$ref:whole-estate-per-month"
      }]
    }
  ]
}
